{
	"name": "adoteumdev-be",
	"version": "0.0.1",
	"private": true,
	"description": "",
	"license": "MIT",
	"author": "otiodarth",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"precommit": "lint-staged && npm run lint",
		"prepare": "husky",
		"prepush": "npm run test",
		"prettier:check": "prettier --check ./**/*.{ts,js,json,*rc}",
		"prettier:write": "prettier --write ./**/*.{ts,js,json,*rc}",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:dev": "NODE_ENV=develop nest start --watch",
		"start:prod": "node dist/main",
		"test": "NODE_ENV=test jest --config jest.config.json",
		"test:cov": "jest --coverage --config jest.config.json",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_ENV=test jest --config jest-e2e.config.json",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/typeorm": "^10.0.2",
		"bcrypt": "^5.1.1",
		"dotenv": "^16.4.5",
		"pg": "^8.12.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.3.1",
		"@types/supertest": "^6.0.0",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^9.1.5",
		"jest": "^29.5.0",
		"jest-resolve": "^29.7.0",
		"lint-staged": "^15.2.10",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"sqlite3": "^5.1.7",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.6.2"
	}
}
