{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"baseUrl": ".",
		"paths": {
			"@identity/*": ["src/module/identity/*"],
			"@shared/*": ["src/module/shared/*"],
			"@persistence/*": ["src/module/shared/infra/module/persistence/*"],
			"@criptography/*": ["src/module/shared/infra/module/criptography/*"]
		},
		"outDir": "./dist",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"types": ["@types/jest"]
	}
}
